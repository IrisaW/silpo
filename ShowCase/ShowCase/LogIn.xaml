<Window x:Class="ShowCase.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowCase"
        mc:Ignorable="d"
        Title="LogIn" Height="300" Width="300">
    <Grid>
        <Button x:Name="button_LogIn" Content="Ввійти" Click="button_LogIn_Click" HorizontalAlignment="Left" Margin="52,212,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button_Registration" Content="Реєстрація" Click="button_Registration_Click" HorizontalAlignment="Left" Margin="168,212,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="textBox_Login" HorizontalAlignment="Left" Height="23" Margin="52,61,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="191"/>
        <TextBox x:Name="textBox_Password" HorizontalAlignment="Left" Height="23" Margin="52,157,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="191"/>
        <Label x:Name="label" Content="Пароль :" HorizontalAlignment="Left" Margin="111,126,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.394,0.569"/>
        <Label x:Name="label1" Content="Логін :" HorizontalAlignment="Left" Margin="122,35,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
