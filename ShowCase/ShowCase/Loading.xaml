<Window x:Class="ShowCase.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:ShowCase"
        mc:Ignorable="d"
        Title="Loading" MaxHeight="600" MaxWidth="750"  >
    <Grid>
        <Image gif:ImageBehavior.AnimatedSource="GifLoad.gif" Stretch="UniformToFill"   x:Name="imBackGround" Source="GifLoad.gif"/>
    </Grid>
</Window>
